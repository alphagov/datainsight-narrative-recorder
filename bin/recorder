#!/usr/bin/env ruby

require 'rubygems'
require 'gli'
require 'logger'

require_relative '../lib/recorders/narrative'

include GLI

program_desc 'Stuff'

version 0.1

desc 'More stuff'
command :run do |c|
  c.action do |global_options, options, args|
    Datainsight::Logging.configure(:type => :recorder)
    Recorders::NarrativeRecorder.new.run
  end
end

exit GLI.run(ARGV)
