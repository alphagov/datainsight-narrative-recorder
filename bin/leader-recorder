#!/usr/bin/env ruby

require 'rubygems'
require 'gli'
require 'logger'

require_relative '../src/recorders/leader'

include GLI

program_desc 'Stuff'

version 0.1

logger = Logger.new(STDOUT)
logger.level = Logger::INFO

desc 'More stuff'
command :run do |c|
  c.action do |global_options, options, args|
    Recorders::LeaderRecorder.new(logger).run
  end
end

exit GLI.run(ARGV)
